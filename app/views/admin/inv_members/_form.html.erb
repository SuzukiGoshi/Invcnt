<div class="notes">
	<span class="mark">*</span> 印の付いた項目は入力必須です。
</div>
<div>
	<%= f.label :inv_id, "ID", class: "required" %>
	<%= f.text_field :inv_id, class: "required" %>
</div>
<% if f.object.new_record? %>
	<div>
		<%= f.label :password, "パスワード", class: "required" %>
		<%= f.password_field :password, size: 32, class: "required" %>
	</div>
<% end %>
<div>
	<%= f.label :family_name, "氏名", class: "required" %>
	<%= f.text_field :family_name, class: "required" %>
	<%= f.text_field :given_name, class: "required" %>
</div>
<div>
	<%= f.label :family_name_kana, "フリガナ", class: "required" %>
	<%= f.text_field :family_name_kana, class: "required" %>
	<%= f.text_field :given_name_kana, class: "required" %>
</div>
<div>
	<%= f.label :start_date, "開始日", class: "required" %>
	<%= f.date_field :start_date, class: "required" %>
</div>
<div>
	<%= f.label :end_date, "退社日", class: "required" %>
	<%= f.date_field :end_date, class: "required" %>
</div>
<div class="check-boxes">
	<%= f.check_box :suspended %>
	<%= f.label :suspended, "アカウント停止" %>
</div>
<div class="check-boxes">
	<%= f.check_box :leader %>
	<%= f.label :leader, "リーダー" %>
</div>
