<% @title = "ログイン" %>

<div id="login-form">

	<h1><%= @title %></h1>

	<%= form_with model: @form, url: :member_session do |f| %>
		<div>
			<%= f.label :inv_id, "ID" %>
			<%= f.text_field :inv_id %>
		</div>
		<div>
			<%= f.label :password, "パスワード" %>
			<%= f.password_field :password %>
		</div>
		<div>
			<%= f.submit "ログイン" %>
		</div>
	<% end %>
</div>
